/dts-v1/;

#include "RT5350F-OLINUXINO.dtsi"

#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "olimex,rt5350f-olinuxino-evb", "ralink,rt5350-soc";
	model = "Olimex RT5350F-OLinuXino-EVB";

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;

		button {
			gpio-export,name = "button";
			gpios = <&gpio0 0 GPIO_ACTIVE_LOW>;
		};

		i2c_rst {
			gpio-export,name = "i2c_rst";
			gpio-export,output = <0>;
			gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
		};

		heat {
			gpio-export,name = "heat";
			gpio-export,output = <0>;
			gpios = <&gpio0 14 GPIO_ACTIVE_HIGH>;
		};

		valve1 {
			gpio-export,name = "valve1";
			gpio-export,output = <0>;
			gpios = <&gpio0 18 GPIO_ACTIVE_HIGH>;
		};

		valve2 {
			gpio-export,name = "valve2";
			gpio-export,output = <0>;
			gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>;
		};

		valve3 {
			gpio-export,name = "valve3";
			gpio-export,output = <0>;
			gpios = <&gpio0 20 GPIO_ACTIVE_HIGH>;
		};

		valve4 {
			gpio-export,name = "valve4";
			gpio-export,output = <0>;
			gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;
		};

		valve5 {
			gpio-export,name = "valve5";
			gpio-export,output = <0>;
			gpios = <&gpio0 21 GPIO_ACTIVE_HIGH>;
		};

		pump {
			gpio-export,name = "pump";
			gpio-export,output = <0>;
			gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>;
		};

		fan {
			gpio-export,name = "fan";
			gpio-export,output = <0>;
			gpios = <&gpio1 2 GPIO_ACTIVE_HIGH>;
		};

		reserv {
			gpio-export,name = "reserv";
			gpio-export,output = <0>;
			gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>;
		};
	};

	lcd {
		compatible = "hit,hd44780";
		display-height-chars = <4>;
		display-width-chars = <20>;
		rs-gpios = <&gpio0 7 GPIO_ACTIVE_HIGH>;		/* rts */
		enable-gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;	/* txd */
		data-gpios = <&gpio0 9 GPIO_ACTIVE_HIGH>,	/* cts */
			     <&gpio0 10 GPIO_ACTIVE_HIGH>,	/* rxd */
			     <&gpio0 11 GPIO_ACTIVE_HIGH>,	/* dtr */
			     <&gpio0 13 GPIO_ACTIVE_HIGH>;	/* dsr */
	};
};

&uart {
	status = "disabled";
};

&i2c {
	clock-frequency = <50000>;

	t6700@15 {
		reg = <0x15>;
		status = "disabled";
	};

	htu21d@40 {
		compatible = "meas,htu21";
		reg = <0x40>;
	};

	adt7420@48 {
		compatible = "adt7420";
		reg = <0x48>;
	};

	ads1115@49 {
		compatible = "ti,ads1115";
		reg = <0x49>;
		#address-cells = <1>;
		#size-cells = <0>;
		channel@0 {
			reg = <0>;
			ti,gain = <5>;
		};
	};
};
